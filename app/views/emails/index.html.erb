<p style="color: green"><%= notice %></p>

<h1>Emails</h1>

<%= form_tag emails_path, method: 'GET' do |f| %>
  <label>search by project:</label> <br/>
  Projectï¼š<%= select_tag :project_id, options_from_collection_for_select(Project.all, :id, :name, params[:project_id]), include_blank: 'all', class: 'form_select' %>
  <br/>
  <label>search by server:</label> <br/>
  Server name: <%= text_field_tag "server_name", params[:server_name], placeholder: 'e.g. beiersdorf' %>
  <br/>
  <%= submit_tag 'search' %>
<% end %>
<%= paginate @emails %>, total: <%= @total_count %>
<%= link_to 'Download csv', download_csv_emails_path %>
<div id="emails">
  <table class='table table-bordered table-hovered table-striped'>
    <tr>
      <th style="width: 100px;">
        id
      </th>
      <th>
        address
      </th>
      <th>
        project
      </th>
      <th>
        server
      </th>
      <th>
        operations
      </th>
    </tr>
    <% @emails.each do |email| %>
      <tr>
        <th>
          <%= email.id %>
        </th>
        <th>
          <%= link_to email.address, email %>
        </th>
        <th>
          <%= link_to email.project.try(:name), email.project %>
        </th>
        <th>
          <%= link_to email.server.try(:name), email.server %>
        </th>
        <td>
          <%= link_to "Show this email", email %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New email", new_email_path %>
