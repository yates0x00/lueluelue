<p style="color: green"><%= notice %></p>

<h1>IpMapping</h1>
<%= form_tag ip_mappings_path, method: 'GET' do |f| %>
  name: <%= text_field_tag "server_name", params[:server_name], placeholder: 'e.g. beiersdorf' %>
  <br/>
  <%= submit_tag 'search' %>
<% end %>

<%= paginate @ip_mappings %>, total: <%= @total_count %>
<%= link_to 'Download csv', download_csv_ip_mappings_path %>
<table class='table table-bordered table-hovered table-striped'>
  <tr>
    <td style='width: 50px;'>ID</td>
    <td>Server name</td>
    <td>Created at</td>
  </tr>
  <% @ip_mappings.each do |ip_mapping| %>
  <tr>
    <td><%= ip_mapping.id %></td>
    <td><%= link_to ip_mapping.server.try(:name), "/servers/#{ip_mapping.server_id}" %></td>
    <td><%= ip_mapping.created_at %></td>
  </tr>
  <% end %>
</table>

<%= paginate @ip_mappings %>
<%#= link_to "New ip_mapping", new_ip_mapping_path %>

<style>
table {
  border: 1px solid black;
  table-layout: fixed;
  width: 200px;
}

th,
td {
  border: 1px solid black;
  width: 100px;
  overflow: hidden;
}
</style>
